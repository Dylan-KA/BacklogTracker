<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BacklogTracker.Views.GameDetailsPage"
             xmlns:viewModel="clr-namespace:BacklogTracker.ViewModels"
             x:DataType="viewModel:GameDetailsViewModel"
             >
    <Grid Padding="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Entry
            Text="{Binding Game.Title}"
            VerticalOptions="Start"
            HorizontalOptions="Start"
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            FontSize="48"
        />

        <Frame  Grid.Column="0"
                Grid.Row="1"
                HorizontalOptions="Fill"
                VerticalOptions="Fill">

            <Button Text="Upload Image"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    TextColor="Black" />
        </Frame>

        <VerticalStackLayout Grid.Column="0" Grid.Row="2" WidthRequest="200" HorizontalOptions="Start" VerticalOptions="Center">
            <Picker Title="Game Platform" ItemsSource="{Binding GamePlatformList}" SelectedItem="{Binding Game.Platform}"/>
            <Picker Title="Game Status" ItemsSource="{Binding GameStatusList}" SelectedItem="{Binding Game.Status}"/>
            <Label Text="{Binding Game.HoursPlayed}"/>
            <Stepper Minimum="0" Maximum="10000" Increment="1" Value="{Binding Game.HoursPlayed, Mode=TwoWay}"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="1" Grid.Row="1" HorizontalOptions="Center">
            <Label Text="Rating"/>
        </VerticalStackLayout>
        
        <VerticalStackLayout Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" HorizontalOptions="Fill" VerticalOptions="Fill">
            <Label Text="Notes"/>
            <Frame  Margin="5"
                    HorizontalOptions="Fill" VerticalOptions="Fill"
                    BackgroundColor="LightGray">
                <Editor Text="{Binding Game.Notes}" TextColor="Black" IsSpellCheckEnabled="True" HorizontalOptions="Fill" VerticalOptions="Fill"/>
            </Frame>
        </VerticalStackLayout>

        <HorizontalStackLayout Grid.Row="4" Grid.Column="4" HorizontalOptions="End" VerticalOptions="End">
            <Button Text="Save" Command="{Binding SaveGameCommand}"/>
            <Button Text="Delete" Command="{Binding RemoveGameCommand}"/>
        </HorizontalStackLayout>
        
    </Grid>
</ContentPage>